<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/kylin_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Statusbar -->
    <PreferenceScreen
        android:id="@+id/status_bar_settings"
        android:title="@string/status_bar_title"
        android:icon="@drawable/ic_kylin_statusbar"
        android:fragment="com.android.settings.cyanogenmod.StatusBar" />

    <!-- Statusbar Toggles -->
    <PreferenceScreen
        android:id="@+id/quick_settings_panel"
        android:title="@string/quick_settings_panel_title"
        android:icon="@drawable/ic_kylin_quicksettings"
        android:fragment="com.android.settings.quicksettings.QuickSettings" />
		
    <!-- Notification Drawer -->
    <PreferenceScreen
        android:id="@+id/notification_drawer_settings"
        android:title="@string/notification_drawer_title"
        android:icon="@drawable/ic_kylin_notification_drawer"
        android:fragment="com.android.settings.cyanogenmod.NotificationDrawer" />
		
    <!-- Lock screen -->
    <PreferenceScreen
        android:id="@+id/lock_screen_settings"
        android:title="@string/lock_screen_title"
        android:icon="@drawable/ic_kylin_lockscreen"
        android:fragment="com.android.settings.cyanogenmod.LockscreenInterface" />

    <!-- Recents interface -->
    <PreferenceScreen
        android:id="@+id/recents_interface"
        android:title="@string/recents_interface_title"
        android:icon="@drawable/ic_kylin_recents"
        android:fragment="com.android.settings.kylinmod.RecentShortCutSettings" />

    <!-- App sidebar -->
    <PreferenceScreen
        android:id="@+id/app_sidebar"
        android:title="@string/app_sidebar_title"
        android:icon="@drawable/ic_kylin_sidebar"
        android:fragment="com.android.settings.kylinmod.AppSidebar" />

    <!-- Active Display -->
    <PreferenceScreen
        android:id="@+id/active_display"
        android:title="@string/active_display_title"
        android:icon="@drawable/ic_kylin_active_display"
        android:fragment="com.android.settings.kylinmod.ActiveDisplaySettings" />

    <!-- HALO -->
    <PreferenceScreen
        android:id="@+id/halo_settings"
        android:title="@string/halo_title"
        android:icon="@drawable/ic_kylin_halo"
        android:fragment="com.android.settings.kylinmod.Halo" />

    <!-- Navigation -->
    <PreferenceScreen
        android:id="@+id/navigation_bar_settings"
        android:title="@string/navigation_bar_category"
        android:icon="@drawable/ic_kylin_navbar"
        android:fragment="com.android.settings.kylinmod.KylinNavbar" />

    <!-- Powermenu -->
    <PreferenceScreen
        android:id="@+id/power_menu_settings"
        android:title="@string/power_menu_title"
        android:icon="@drawable/ic_kylin_powermenu"
        android:fragment="com.android.settings.cyanogenmod.PowerMenu" />

    <!-- Animation Options -->
    <PreferenceScreen
        android:id="@+id/animation_options"
        android:title="@string/animation_options_title"
        android:icon="@drawable/ic_kylin_animations"
        android:fragment="com.android.settings.kylinmod.AnimationOptions" />

</PreferenceScreen>