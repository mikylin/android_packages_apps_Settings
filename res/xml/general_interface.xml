<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/general_interface_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- General interface -->
    <PreferenceCategory
        android:key="general_interface"
        android:title="@string/general_interface_title">

        <!-- Recents RAM bar -->
        <PreferenceScreen
                android:key="recents_ram_bar"
                android:fragment="com.android.settings.kylinmod.RamBar"
                android:title="@string/ram_bar" /> 

        <!-- Shortcuts List -->
        <PreferenceScreen
            android:key="recent_shortcut"
            android:fragment="com.android.settings.kylinmod.RecentShortCutSettings"
            android:title="@string/recent_shortcut_title" />

        <!-- Screen_recorder -->
        <PreferenceScreen
                android:key="screen_recorder"
                android:title="@string/screen_recorder_title"
                android:fragment="com.android.settings.kylinmod.ScreenRecorderSettings" />

    </PreferenceCategory>

</PreferenceScreen>
